@model IEnumerable<Weather_Monitoring_Application.Models.Location>

@{
    ViewData["Title"] = "Index";
}
<div class="d-flex justify-content-between align-item-center mb-3">
    <div>
        <h1>Your Places</h1>
        <p class="opacity-75">View the weather of your saved places</p>
    </div>
    <div>
        <a type="button" class="btn" asp-action="Create"><i class="bi bi-plus-circle-dotted pe-2"></i>Add Place</a>

    </div>
</div>
<table class="table text-light table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zipcode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr onclick="location.href='@Url.Action("Details", new { id = item.Id })'">
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zipcode)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pen"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
